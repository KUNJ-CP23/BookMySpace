@model BookMySpace.Models.Role

<h2>Delete Role</h2>

@if (TempData["Error"] != null)
{
    <p style="color:red">@TempData["Error"]</p>
}

<p>Are you sure you want to delete this role?</p>

<p><b>RoleId:</b> @Model.RoleId</p>
<p><b>RoleName:</b> @Model.RoleName</p>

<form method="post" action="/RolesUi/DeleteConfirmed/@Model.RoleId">
    <button type="submit">Yes Delete</button>
    <a href="/RolesUi/Index">Cancel</a>
</form>